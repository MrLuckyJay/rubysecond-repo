



<div class="row">
    <div class="col-md-12">
      
        <%= render  "shared/errors" , obj: @article %>
      
        <%= form_with(model: article,:html=> {class:'form-horizontal',role:'form'} ,local: true) do |form| %>


          <div class="form-group">
            <div class="control-label col-sm-2">
                <%= form.label :title %>
            </div>

            <div class="col-sm-8">
                <%= form.text_field :title, class:"form-control" ,placeholder:"Title of Article", autofocus:true %>
            </div>

          </div>



          <div class="form-group">
              <div class="control-label col-sm-2">
                  <%= form.label :content %>
              </div>

              <div class="col-sm-8">
                  <%= form.text_area :content, rows:10,class:'form-control',placeholder:'Body of the Article' %>
              </div>
          </div>


          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <%= form.submit  class:'btn btn-primary btn-lg' %>
            </div>

          </div>
          
          
      
      
        <div class="actions">
          
        </div>
      <% end %>
      
      
        

    </div>

  </div>
